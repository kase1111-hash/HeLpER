{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HeLpER",
  "version": "0.1.0-alpha",
  "identifier": "com.helper.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "HeLpER",
        "width": 400,
        "height": 600,
        "minWidth": 320,
        "minHeight": 480,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "center": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://api.weatherapi.com https://ip-api.com https://*.natlangchain.com http://localhost:* http://127.0.0.1:*"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "category": "Productivity",
    "shortDescription": "Lightweight daily notes with AI assistant",
    "longDescription": "HeLpER is a minimalist daily notes application with integrated Ollama AI assistance for note formatting and expansion.",
    "copyright": "2025 HeLpER",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "minimumSystemVersion": "11.0"
    },
    "windows": {
      "wix": null,
      "nsis": null
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:helper.db"]
    }
  }
}
